

<div class="letters" style="display:flex; justify-content: space-around; margin: 0 auto">
  <% @grids.each do |letter| %>
  <p style="padding: 24px; border: 0.5px solid black; box-shadow: 2px 2px 2px rgba(0,0,0,0.3)"><%= letter %></p>
  <% end %>

</div>
<div class="games" style="display:flex; justify-content: center; align-items: center; margin: 32px auto">
<form action="/score" method="post">
   <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
   <%= hidden_field_tag :hidden_grid, @grids %>
   <%= hidden_field_tag :result, @result %>
   <label for="text">What is the longest word you can find? 😏</label>
   <br>
   <br>
  <!-- <input type="hidden" value="<%= @letters %>" name="hidden_grid"> -->
  <!-- <input type="hidden" value="<%= @result %>" name="result"> -->
  <input type="text" name="word" placeholder="Your longest word here...">
  <input type="submit" value="Play!">
  </div>
</form>
